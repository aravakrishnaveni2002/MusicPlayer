<link rel="stylesheet" href="/css/form.css">

<div class="title"><%= title%></div>

<div class="signin-signup">

    <div class="form"> 
        <form action="/user/change-password/?user_id=<%=user_id%>" method="POST">
            <div id="form-contents">
                <div>
                    <span class="form-input-head">Password</span>
                    <input class="form-input-val" name = "password" type="password" required>
                </div>

                <div>
                    <span class="form-input-head">Confrim Password</span>
                    <input class="form-input-val" name = "confirm_password" type="password" required>
                </div>
                
            </div>
    
            <div id="form-submit">
                <button class="submit-btn">Submit</button>
            </div>
            
        </form>
    </div>

</div>