<div class="whole-fav">
    <div class="title"><%= title%></div>

    <div class="albums-container">

        <% var obj = new Object() %>

        <% for(fav of favourites) {%>
            <% if(fav.user._id == locals.user.id) {%>
                <% if(obj[fav.song.album.name] == undefined) {%>
                    <% obj[fav.song.album.name] = 1 %>
                    <div class="each-album" id="each-album-<%=fav.song.album._id%>">
                        <div class="album-info">
                            <a href="/user/favourite/album-songs/?album_id=<%=fav.song.album._id%>" ><img class="each-photo" src="<%= fav.song.album.photo%>" alt=""></a>
    
                            <div class="album-details">
                                
                                <a href="/user/favourite/album-songs/?album_id=<%=fav.song.album._id%>" class="album-name"><span ><%= fav.song.album.name%></span></a>
                                
                            </div>
                        </div>
                    </div>
                <%} %>
                
            <%}%>
        <%}%>

    </div>

</div>